<div class="container card card-body">
    <h3>Add Camps</h3>
    <form action="/addCamp" method="POST">

        <!-- Camp Name -->
        <div class="form-group">
            <label for="title">Camp Name</label>
            <input type="text" class="form-control" name="name" required>
        </div>

        <!-- Climate Conditions -->
        <div class="form-group">
            <label for="details">Climate Conditions</label>
            <textarea class="form-control" name="cliConditions" required></textarea>
        </div>

        <!-- infractucture conditions -->
        <div class="form-group">
            <label for="details">Infractucture Conditions</label>
            <textarea class="form-control" name="infConditions" required></textarea>
        </div>

        <!-- Water access conditions -->
        <div class="form-group">
            <label for="details">Water access conditions</label>
            <textarea class="form-control" name="wacConditions" required></textarea>
        </div>

        <!-- Firewood Acess -->
        <div class="form-group">
            <label for="details">Firewood Acess</label>
            <textarea class="form-control" name="faConditions" required></textarea>
        </div>

        <!-- Food Acess -->
        <div class="form-group">
            <label for="details">Food Acess</label>
            <textarea class="form-control" name="fAcess" required></textarea>
        </div>

        <!-- Relief -->
        <div class="form-group">
            <label for="details">Relief</label>
            <textarea class="form-control" name="relief" required></textarea>
        </div>

        <!-- Google Map Link -->
        <div class="form-group">
            <label for="details">Map Link</label>
            <textarea class="form-control" name="mLink" required></textarea>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

